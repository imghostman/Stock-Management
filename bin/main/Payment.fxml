<AnchorPane id="AnchorPane" prefHeight="814.0" prefWidth="845.0" style="-fx-background-color: #16161d;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="EmergingWorld.Controller.PaymentController">
   <children>
      <Pane prefHeight="201.0" prefWidth="845.0">
