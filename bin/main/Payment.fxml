               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>


            <TextField fx:id="text_payment" layoutX="228.0" layoutY="80.0" prefHeight="28.0" prefWidth="276.0" promptText="Payment Mode">
               <font>
                  <Font name="Algerian" size="15.0" />
               </font>
            </TextField>
         </children>
      </Pane>
   </children>
</AnchorPane>
