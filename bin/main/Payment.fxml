            <ImageView fitHeight="207.0" fitWidth="977.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@EmergingWorld/images/Tpayments.jpg" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <Pane layoutY="207.0" prefHeight="604.0" prefWidth="845.0">
         <children>
            <TextField fx:id="text_bill" layoutX="228.0" layoutY="27.0" prefHeight="28.0" prefWidth="276.0" promptText="Bill ID">
               <font>
                  <Font name="Algerian" size="15.0" />
               </font>
            </TextField>
            <TableView fx:id="table" layoutY="133.0" prefHeight="524.0" prefWidth="845.0" stylesheets="@layoutTheme.css">
              <columns>
                <TableColumn fx:id="col_bill" editable="false" prefWidth="422.0" text="Bill_ID" />
                <TableColumn fx:id="col_payMode" prefWidth="421.0" text="Payment Mode" />
              </columns>
            </TableView>
            <Button fx:id="search" layoutX="572.0" layoutY="80.0" onAction="#OnClick" prefHeight="38.0" prefWidth="219.0" style="-fx-background-color: #560c59;" text="Search by Payment " textFill="WHITE">
